{
  "name": "shiki-element",
  "version": "0.0.0-dev",
  "description": "A web component to render code using the Shiki library.",
  "main": "lib/shiki-element.js",
  "type": "module",
  "files": [
    "lib/!(test)",
    "custom_types/"
  ],
  "scripts": {
    "clean": "rimraf ./lib",
    "lint": "eslint \"src/**/*.ts\"",
    "prebuild": "npm run clean",
    "build": "tsc",
    "test": "web-test-runner",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "prepare": "npm run build",
    "prepublishOnly": "npm run lint && npm run test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/43081j/shiki-element.git"
  },
  "keywords": [
    "shiki",
    "syntax",
    "highlighting",
    "highlighter"
  ],
  "author": "James Garbutt (https://github.com/43081j)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/43081j/shiki-element/issues"
  },
  "homepage": "https://github.com/43081j/shiki-element#readme",
  "dependencies": {
    "shiki": "^1.7.0"
  },
  "devDependencies": {
    "@eslint/js": "^8.57.0",
    "@types/mocha": "^10.0.6",
    "@web/test-runner": "^0.18.2",
    "@web/test-runner-puppeteer": "^0.16.0",
    "eslint": "^8.57.0",
    "hanbi": "^1.0.3",
    "mocha": "^10.4.0",
    "prettier": "^3.3.2",
    "rimraf": "^5.0.7",
    "typescript": "^5.4.5",
    "typescript-eslint": "^7.13.0",
    "uvu": "^0.5.1"
  }
}
